generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id Int @id @default(autoincrement())
  firstname String
  lastname String
  email String @unique
  password String
  role Role

  isActive Boolean

  @@map("user")
}

model Car {
  id Int @id @default(autoincrement())
  category String
  brandId Int
  model String
  year Int
  price Float
  fueltype String


  brand Brand @relation(fields: [brandId], references: [id])

  @@map("car")
}




// næ
 model Category {
  id Int @id @default(autoincrement())
  PassengerCar String
  Van String
  Truck String

  @@map("category")
}

model Brand {
  id Int @id @default(autoincrement())
  name String
  logoUrl String

  car Car[]

  @@map("brand")
}
