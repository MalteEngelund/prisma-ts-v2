generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id Int @id @default(autoincrement())
  firstname String
  lastname String
  email String @unique
  password String
  role Role

  isActive Boolean

  @@map("user")
}

model Car {
  id Int @id @default(autoincrement())
  categoryId Int
  brandId Int
  model String
  year Int
  price Float
  fueltypeId Int

  category Category @relation(fields: [categoryId], references: [id])
  brand Brand @relation(fields: [brandId], references: [id])
  fueltype Fueltype @relation(fields: [fueltypeId], references: [id])

  @@map("car")
}




