generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String

  @@map("user")
}

model Car {
  id Int @id @default(autoincrement())
  category String
  brandId Int
  model String
  year Int
  price Float
  fueltype String


  brand Brand @relation(fields: [brandId], references: [id])

  @@map("car")
}




// næ
 model Category {
  id Int @id @default(autoincrement())
  PassengerCar String
  Van String
  Truck String

  @@map("category")
}

model Brand {
  id Int @id @default(autoincrement())
  name String
  logoUrl String

  cars Car[]

  @@map("brand")
}
